{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "DynamoDB resource stack creation using Amplify CLI",
    "Parameters": {
        "partitionKeyName": {
            "Type": "String"
        },
        "partitionKeyType": {
            "Type": "String"
        },
        
        "sortKeyName": {
            "Type": "String"
        },
        "sortKeyType": {
            "Type": "String"
        },
        
        "tableName": {
            "Type": "String"
        }
    },
    "Resources": {
        "DynamoDBTable": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "AttributeDefinitions": [
                  
                  {
                      "AttributeName": "type",
                      "AttributeType": "S"
                  }  , 
                  
                  {
                      "AttributeName": "sortId",
                      "AttributeType": "S"
                  } 
                  
                ],
                "KeySchema": [
                  
                  {
                    "AttributeName": "type",
                    "KeyType": "HASH"
                  }  , 
                  
                  {
                    "AttributeName": "sortId",
                    "KeyType": "RANGE"
                  } 
                  
                ],
                "ProvisionedThroughput": {
                    "ReadCapacityUnits": "2",
                    "WriteCapacityUnits": "2"
                },
                "TableName": {
                   "Ref": "tableName"
                },
                
            }
        }
    },
    "Outputs": {
        "Name": {
            "Value": {
                "Ref": "DynamoDBTable"
            }
        },
        "Arn": {
            "Value": {
                "Fn::GetAtt": [
                    "DynamoDBTable",
                    "Arn"
                ]
            }
        },
        "PartitionKeyName": {
            "Value": {
                "Ref": "partitionKeyName"
            }
        },
        "PartitionKeyType": {
            "Value": {
                "Ref": "partitionKeyType"
            }
        },
        
        "SortKeyName": {
            "Value": {
                "Ref": "sortKeyName"
            }
        },
        "SortKeyType": {
            "Value": {
                "Ref": "sortKeyType"
            }
        },
        
        "Region": {
            "Value": {
                "Ref": "AWS::Region"
            }
        }
    }
}